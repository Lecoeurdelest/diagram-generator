{
  "manifest_version": 3,
  "name": "Hmmmmnm Diagram Generator",
  "version": "1.0.0",
  "description": "A Chrome extension for encoding and generating Mermaid and PlantUML diagrams with LLM support.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "downloads",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com"
  }
}